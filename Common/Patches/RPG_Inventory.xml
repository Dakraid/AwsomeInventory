<?xml version="1.0" encoding="utf-8" ?>

<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Combat Extended</li>
        </mods>
        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[@Name="BasePawn"]/inspectorTabs/li[text()="CombatExtended.ITab_Inventory"]</xpath>
            <value>
                <li>RPG_Inventory_Remake_CE.RPG_GearTab_CE</li>
            </value>
        </match>
        <nomatch Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[@Name="BasePawn"]/inspectorTabs/li[text()="ITab_Pawn_Gear"]</xpath>
            <value>
                <li>RPG_Inventory_Remake.RPG_GearTab</li>
            </value>
        </nomatch>
    </Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="BasePawn"]/comps</xpath>
		<value>
			<li>
                <compClass>RPG_Inventory_Remake.Loadout.CompRPGILoadout</compClass>
            </li>
		</value>
	</Operation>
</Patch>